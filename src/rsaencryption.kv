#:kivy 2.1.0

UserInterface:


<UserInterface>:
    # Tämä on käyttöliittymä, joka sisältää kaikki komponentit.
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Slider:
            id: my_slider
            min: 9
            max: 12
            value: 9
            step: 1
            on_value: root.handle_slider_change(self)
            width: "100dp"
            # disabled: not my_switch.active
        BoxLayout:
            orientation: "vertical"
            width: "500dp"
            Label:
                # text: str(int(my_slider.value))
                text: root.slider_key_size_text
                font_name: "FreeMono"
                font_size: "80dp"
                color: 0, 1, 0, 1
            ProgressBar:
                max: 4096
                value: 2 ** my_slider.value    
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Generate Key Pair"
                on_press: root.handle_generate_key_pair()
                # disabled: not root.count_enabled
            Label:
                text: root.generation_time + " sec"
                font_name: "FreeMono"
                font_size: "30dp"
                color: 0, 1, 0, 1
        BoxLayout:
            orientation: "vertical"
            spacing: "5dp"
            TextInput:
                id: message_input
                size_hint: None, 2
                width: root.width
                text: "Hello Bob, this is Alice."
                multiline: False   
            Button:
                text: "Encrypt"
                on_press: root.handle_encryption(message_input) 
                # disabled: not root.count_enabled
            Label:
                text: root.encryption_time + " sec"
                font_name: "FreeMono"
                font_size: "20dp"
                color: 0, 1, 0, 1
            Label:
                text_size: root.width, None
                size: self.texture_size
                halign: "center"
                text: "Encrypted message:"
                font_name: "FreeMono"
                font_size: "20dp"
                color: 0, 1, 0, 1
            Label:
                id: encrypted_message
                text_size: root.width, None
                size: self.texture_size
                halign: "center"
                text: root.encrypted_message_text
                font_name: "FreeMono"
                font_size: "20dp"
                color: 0, 1, 0, 1
        BoxLayout:
            orientation: "vertical"
            spacing: "5dp" 
            Button:
                text: "Decrypt"
                on_press: root.handle_decryption() 
                # disabled: not root.count_enabled
            Label:
                text: root.decryption_time + " sec"
                font_name: "FreeMono"
                font_size: "20dp"
                color: 0, 1, 0, 1 
            Label:
                text_size: root.width, None
                size: self.texture_size
                halign: "center"
                text: "Decrypted message:"
                font_name: "FreeMono"
                font_size: "20dp"
                color: 0, 1, 0, 1    
            Label:
                id: encrypted_message
                text_size: root.width, None
                size: self.texture_size
                halign: "center"
                text: root.decrypted_message_text
                font_name: "FreeMono"
                font_size: "20dp"
                color: 0, 1, 0, 1